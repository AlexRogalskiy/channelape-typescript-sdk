  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}